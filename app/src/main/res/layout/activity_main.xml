<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="DifficoltÃ "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="Mosse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="@+id/textView"
    />
    <TextView
            android:text="Vittorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/seekBar"
            android:layout_marginStart="32dp"/>
    <Button
            android:text="GIOCA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintStart_toStartOf="@+id/textView6"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView6"/>
    <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="77dp"
            android:layout_height="18dp"
            android:max="10"
            android:progress="3"
            android:id="@+id/seekBar"
            app:layout_constraintBottom_toBottomOf="@+id/textView" app:layout_constraintStart_toEndOf="@+id/textView"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="0"
            android:layout_width="48dp"
            android:layout_height="19dp"
            android:id="@+id/textView5" android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/textView2" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"/>
    <TextView
            android:text="0"
            android:layout_width="45dp"
            android:layout_height="18dp"
            android:id="@+id/textView7" android:textAlignment="center"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView6"
            app:layout_constraintStart_toEndOf="@+id/textView6" android:layout_marginStart="8dp"
    />
</android.support.constraint.ConstraintLayout>